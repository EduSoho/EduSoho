{% extends 'old-bootstrap-modal-layout.html.twig' %}
{% set modal_class = 'modal-lg' %}
{% block title %}{{'open_live.plugin.admin.enrolled_student.list'|trans}}{% endblock %}
{% block body %}

  <form id="user-search-form" class="form-inline well well-sm" action="{{ path('admin_v2_open_live_enrolled_student_ajax_search',{'id':roomId}) }}" method="post" novalidate>
    <div class="form-group">
      <select id="enrollListKeywordType" name="keywordType" class="form-control">
        {{ select_options(dict('openLiveEnrolledStudentSearchKeywordType'), app.request.get('keywordType') ? app.request.get('keywordType') : 'nickname') }}
      </select>
    </div>

    <div class="form-group">
      <input type="text" id="enrollListKeyword" name="keyword" class="form-control" value="{{ app.request.get('keyword') }}"
             placeholder="{{ 'admin.user.form.input_placeholder.keyword'|trans }}">
    </div>

    <a class="btn btn-primary" id="search">{{ 'open_live.plugin.admin.list.data_search'|trans }}</a>
    {% include 'OpenLivePlugin::admin/enrolled-student/open-live-enrolled-student-export-btn.html.twig' %}
  </form>

  <div class="data-list">
    {% include 'OpenLivePlugin::admin/enrolled-student/open-live-enrolled-student-tr.html.twig' with {enrolledStudents: enrolledStudents} %}
  </div>

{% endblock %}
{% block footer %}
  <button type="button" class="btn btn-link pull-right" data-dismiss="modal">{{ 'form.btn.close'|trans }}</button>
  <script>app.load('openliveplugin/controller/open-live/open-live-enrolled-list');</script>
{% endblock %}