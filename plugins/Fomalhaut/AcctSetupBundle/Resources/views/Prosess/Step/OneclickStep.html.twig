{% extends 'AcctSetupBundle::layout.html.twig' %}

{% block content %}
<div>
    <div>
        <form action="{{ path('sylius_flow_forward', {'scenarioAlias': 'wechat_acctsetup', 'stepName': 'oneclick'}) }}" method="post">
            {{ form_errors(form) }}
            <div>
                <div>
                    <h3>微信公众号用户名</h3>
                    {{ form_widget(form.wxusername) }}
                </div>
                <div>
                    <h3>微信公众号密码</h3>
                    {{ form_widget(form.wxpassword) }}
                </div>
                <div>
                    <h3>验证码</h3>
                    {{ form_widget(form.imgcode) }}
                </div>
            </div>
            {{ form_rest(form) }}
            <div>
                <a href="{{ path('sylius_flow_display', {'scenarioAlias': 'wechat_acctsetup', 'stepName': 'baseinfo'}) }}" >
                    <i></i>
                    返回
                </a> &nbsp;

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('site') }}">

                <button  type="submit">
                    <i></i> 下一步
                </button>
            </div>
        </form>
    </div>
</div>

{% endblock %}