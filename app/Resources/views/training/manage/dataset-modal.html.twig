    <div style="padding-top:10px;min-height:300px;">
        {{ include('training/manage/dataset-modal-list.html.twig') }}
    </div>
    </p>
    <div slot="footer">
        <div class="footer-container">
            <div>
                <span>已选：1/2/3</span>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block footer %}
<button type="button" class="btn btn-link js-close-modal" data-dismiss="modal" tabindex="6">取消</button>
<button id="pick-btn" data-submiting-text="正在提交" type="submit" class="btn btn-primary js-pick-btn"
  data-toggle="form-submit" tabindex="4">保存</button>


  <script>
    $(function(){
        $(".dataset_ul").on("click",".dataset_li",function(){
            $(this).toggleClass("dataset_active")
        })
        $(".js-select-container").on("click",".pagination li",function(){
            $page = $(".js-select-container").data("url")
            alert($page);
        })
    })
  </script>


  <style>
    .right-editor .ck-content {
        min-height: 550px;
    }
</style>
<style scoped lang="less">
    .dataset_active{
        position: relative;
        border: solid 1px #298dff;
    }
    .dataset_active:last-child{
        border: solid 1px #298dff;
    }
    .ivu-list-item{
        padding:16px 8px;
    }
    .dataset_active:after {
        content: "";
        right: 0;
        bottom: 0;
        width: 24px;
        height: 24px;
        position: absolute;
        background: url(data:image/svg+xml;base64,) 0/100% 100%;
        background-size: 100%
    }
    .footer-container {
        padding-left: 18px;
        bottom: 0;
        height: 40px;
        width: 100%;
        line-height: 40px;
        font-size: 14px;
        display: -ms-flexbox;
        display: flex;
        -ms-flex-align: center;
        align-items: center;
    }
</style>    
{% endblock %}
