{% extends 'bootstrap-modal-layout.html.twig' %}

{% set modal_class = 'training-modal-lg' %}

{% block title %} 选择镜像 {% endblock %}



{% block body %}
<div class="training-add js-select-container">
    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#private" aria-controls="private" role="tab" data-toggle="tab">个人镜像</a></li>
        <li role="presentation"><a href="#public" aria-controls="public" role="tab" data-toggle="tab">公共镜像</a></li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content" style="margin-left:30px;">
        <div role="tabpanel" class="tab-pane active" id="private">
            <div id="" class="container">
                <label class="radio">
                    <input type="radio" name="common" id="" value="" />
                    北京
                </label>
                <label class="radio">
                    <input type="radio" name="common" id="" value=""/>
                    上海
                </label>
                <label class="radio">
                    <input type="radio" name="common" id="" value="" />
                    广州
                </label>
            </div>
        </div>
        <div role="tabpanel" class="tab-pane" id="public">
            <label class="radio">
                    <input type="radio" name="common" id="" value="" />
                    深圳
                </label>
                <label class="radio">
                    <input type="radio" name="common" id="" value=""/>
                    重庆
                </label>
                <label class="radio">
                    <input type="radio" name="common" id="" value="" />
                    长沙
                </label>
        </div>
    </div>
</div>
{% endblock %}

{% block footer %}
<button type="button" class="btn btn-link js-close-modal" data-dismiss="modal" tabindex="6">取消</button>
<button id="pick-btn" data-submiting-text="正在提交" type="submit" class="btn btn-primary js-pick-btn"
  data-toggle="form-submit" tabindex="4">保存</button>


  <script>
    $(function(){
        $('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
            e.target // newly activated tab
            e.relatedTarget // previous active tab
            console.log(e.target);
            console.log(e.relatedTarget);
        })

        // 点击提交
        $("#pick-btn").on("click",function(event){
            let $content = $('#task-create-content-iframe').contents();
            $content.find('.js-cached-question').text({id:1,name:"自定义镜像01"});

            let $target = $(event.currentTarget);
            let name = $target.data('name');

            let $modal = $('.js-select-container').parents('.modal');
            $modal.modal('hide');
            $('.js-close-modal').trigger('click');
        })
    })
  </script>
{% endblock %}
