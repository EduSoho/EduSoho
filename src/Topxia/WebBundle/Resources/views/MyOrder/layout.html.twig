{% extends 'TopxiaWebBundle:My:layout.html.twig' %}

{% block title %}{{'我的订单'|trans}} - {{ parent() }}{% endblock %}

{% set side_nav = 'my-orders' %}

{% block main %}
<div class="panel panel-default panel-col">
  <div class="panel-heading">{{'我的订单'|trans}}</div>
  <div class="panel-body">

    {% set main_nav = main_nav|default(null) %}
    <ul class="nav nav-pills nav-pills-mini clearfix">
      <li{% if main_nav == 'orders' %} class="active"{% endif %}><a href="{{ path('my_orders') }}">{{'全部订单'|trans}}</a></li>
      <li{% if main_nav == 'refunds' %} class="active"{% endif %}><a href="{{ path('my_refunds') }}">{{'退款记录'|trans}}</a></li>
    </ul>

    {% block main_body %}{% endblock %}
  </div>
</div>
{% endblock %}